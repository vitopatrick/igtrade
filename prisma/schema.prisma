generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgres"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Users {
  id            Int            @id @default(autoincrement())
  first_name    String?
  last_name     String?
  email         String         @unique
  clerkId       String         @unique
  deposits      Deposits[]
  transactions  Transactions[]
  withdrawals   Withdrawals[]
  chartData     ChartData[]
  trades        Trade[]
  revenue       Float          @default(0)
  profit        Float          @default(0)
  trading_bonus Float          @default(0)
  createdAt     DateTime       @default(now())
}

model Deposits {
  id        Int      @id @default(autoincrement())
  amount    Float
  createdAt DateTime @default(now())
  status    String
  method    String
  remarks   String
  user      Users    @relation(fields: [clerkId], references: [clerkId])
  clerkId   String
}

model Withdrawals {
  id        Int      @id @default(autoincrement())
  amount    Float
  createdAt DateTime @default(now())
  status    String
  method    String
  remarks   String
  user      Users    @relation(fields: [clerkId], references: [clerkId])
  clerkId   String
}

model Transactions {
  id        Int      @id @default(autoincrement())
  remarks   String
  type      String
  createdAt DateTime @default(now())
  amount    Float
  user      Users    @relation(fields: [clerkId], references: [clerkId])
  clerkId   String
}

model ChartData {
  id      Int      @id @default(autoincrement())
  profit  Float
  user    Users    @relation(fields: [clerkId], references: [clerkId])
  clerkId String
  date    DateTime
}

model Trade {
  id        Int      @id @default(autoincrement())
  amount    Float
  profit    Float
  user      Users    @relation(fields: [clerkId], references: [clerkId])
  clerkId   String
  date      DateTime @default(now())
  commodity String
}
